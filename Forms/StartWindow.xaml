<Window x:Class="hci_restaurant.Forms.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restoran Prijava" Height="400" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Prijavi se" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,20,0,10" FontWeight="Bold" />

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="UsernameTextBox" Text="Korisnicko ime" Width="200" Margin="0,10" Height="40" FontSize="16" BorderBrush="#007ACC" BorderThickness="2" />
            <PasswordBox Name="PasswordBox" Width="200" Margin="0,10" Height="40" FontSize="16" BorderBrush="#007ACC" BorderThickness="2" />
            <Button Content="Prijavi se" Width="120" Margin="0,20" Background="#007ACC" Foreground="White" FontWeight="Bold" Height="40" FontSize="18" BorderThickness="0" Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>
